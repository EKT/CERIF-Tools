          maxWait="10000"
          initialSize="5"
          removeAbandonedTimeout="120"
          removeAbandoned="true"
          minEvictableIdleTimeMillis="30000"
          jmxEnabled="false"
          username="root"
          password="1111"
          driverClassName="com.mysql.jdbc.Driver"
		  url="jdbc:mysql://localhost:3306/example_app?characterEncoding=utf8"/>

</Context>